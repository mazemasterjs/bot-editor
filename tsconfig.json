{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "watch": false,
    "removeComments": false,
    // "declaration": true,
    // "declarationDir": "ts/bin",
    "sourceMap": true,
    "outDir": "ts/bin",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["ts/src", "ts/Command.ts"],
  "exclude": ["node_modules"]
}
